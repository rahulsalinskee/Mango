@using Mango.Web.Models.ProductModels.DTOs
@model ProductDto

<form asp-action="DeleteProductById" asp-controller="Product">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Product</h1>
        <input hidden asp-for="ProductId" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Name" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Price" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="CategoryName" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Image URL</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="ImageUrl" type="url" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-controller="Product" asp-action="GetAllProducts" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@* Client Side Validation *@
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
