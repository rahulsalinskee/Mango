@using Mango.Web.Models.CouponModels.DTOs
@model IEnumerable<CouponDto>

@{
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">Coupons List</h1>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="coupon" asp-action="CouponCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Coupon</a>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Coupon ID
                        </th>
                        <th>
                            Coupon Code
                        </th>
                        <th>
                            Discount Amount
                        </th>
                        <th>
                            Minimum Amount
                        </th>
                        <th>
                            Created On
                        </th>
                        <th>
                            Expire On
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.CouponId
                            </td>
                            <td>
                                @item.CouponCode
                            </td>
                            <td>
                                @item.DiscountAmount
                            </td>
                            <td>
                                @item.MinimumAmount
                            </td>
                            <ttd>
                                @item.CreatedDate
                            </ttd>
                            <td>
                                @item.ExpiryDate
                            </td>
                            <td>
                            </td>
                            <td>
                                <a asp-controller="Coupon" asp-action="CouponDeleteById" asp-route-couponId="@item.CouponId" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
